@import url("https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,600&family=Space+Grotesk:wght@400;500;600&display=swap");

:root {
  --bg: #f4efe5;
  --bg-2: #efe3d3;
  --ink: #1f1b16;
  --muted: #6b5f55;
  --accent: #d97706;
  --accent-2: #0f766e;
  --card: #fffaf3;
  --border: #e6d9c9;
  --shadow: 0 18px 45px rgba(31, 27, 22, 0.12);
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: "Space Grotesk", "Trebuchet MS", sans-serif;
  color: var(--ink);
  background: radial-gradient(
      circle at top left,
      rgba(217, 119, 6, 0.18),
      transparent 45%
    ),
    linear-gradient(120deg, var(--bg), var(--bg-2));
  min-height: 100vh;
  position: relative;
}

#root {
  min-height: 100vh;
}

.bg-shape {
  position: fixed;
  inset: 8% 8% auto auto;
  width: 240px;
  height: 240px;
  background: radial-gradient(
    circle,
    rgba(15, 118, 110, 0.25),
    transparent 65%
  );
  pointer-events: none;
}

.app {
  max-width: 1100px;
  margin: 0 auto;
  padding: 48px 24px 64px;
  display: grid;
  gap: 32px;
}

.hero {
  display: grid;
  gap: 16px;
  max-width: 720px;
}

.brand {
  text-transform: uppercase;
  letter-spacing: 0.22em;
  font-size: 0.75rem;
  color: var(--accent-2);
  font-weight: 600;
}

.hero h1 {
  font-family: "Fraunces", "Times New Roman", serif;
  font-size: clamp(2.2rem, 4vw, 3.4rem);
  margin: 0;
}

.hero p {
  margin: 0;
  color: var(--muted);
  line-height: 1.6;
}

.panel {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 24px;
  padding: 28px;
  box-shadow: var(--shadow);
}

.field-row {
  display: grid;
  gap: 8px;
  margin-bottom: 18px;
}

.field-row.inline {
  align-items: center;
  grid-auto-flow: column;
  justify-content: start;
  gap: 12px;
}

label {
  font-weight: 600;
}

select,
textarea,
input[type="text"],
input[type="number"] {
  width: 100%;
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--border);
  font: inherit;
  background: #fff;
}

textarea {
  resize: vertical;
}

.hint {
  font-size: 0.85rem;
  color: var(--muted);
}

.toggle {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  font-weight: 600;
}

button {
  font: inherit;
  padding: 12px 20px;
  border-radius: 999px;
  border: none;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

button:hover {
  transform: translateY(-1px);
  box-shadow: 0 10px 20px rgba(31, 27, 22, 0.15);
}

button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  box-shadow: none;
}

.primary {
  background: var(--accent);
  color: #fff7ed;
  font-weight: 600;
}

.secondary {
  background: var(--accent-2);
  color: #e7f7f4;
  font-weight: 600;
  margin-top: 16px;
}

.ghost {
  background: transparent;
  border: 1px dashed var(--accent-2);
  color: var(--accent-2);
  margin-top: 12px;
}

.status {
  margin-top: 14px;
  color: var(--muted);
  min-height: 20px;
}

.lockout {
  border: 1px solid var(--border);
  border-radius: 18px;
  padding: 18px;
  margin-bottom: 18px;
  background: #fffdf8;
}

.lockout h2 {
  margin: 0 0 8px;
  font-family: "Fraunces", "Times New Roman", serif;
}

.lockout p {
  margin: 0 0 12px;
  color: var(--muted);
}

.provider-setup {
  border-top: 1px dashed var(--border);
  padding-top: 12px;
  margin-top: 12px;
}

.provider-setup h3 {
  margin: 0 0 6px;
}

.provider-setup ul {
  margin: 0 0 8px 18px;
  padding: 0;
  color: var(--muted);
}

.provider-setup .reason,
.provider-setup .env {
  font-size: 0.85rem;
  color: var(--muted);
  margin-bottom: 6px;
}

.provider-setup a {
  color: var(--accent-2);
  font-weight: 600;
  text-decoration: none;
}

.results {
  display: grid;
  gap: 24px;
}

.card {
  background: rgba(255, 250, 243, 0.95);
  border: 1px solid var(--border);
  border-radius: 22px;
  padding: 24px;
  box-shadow: var(--shadow);
  opacity: 0;
  transform: translateY(12px);
  animation: reveal 0.5s ease forwards;
}

.card header h2 {
  font-family: "Fraunces", "Times New Roman", serif;
  margin: 0 0 6px;
}

.card header p {
  margin: 0 0 16px;
  color: var(--muted);
}

.hidden {
  display: none;
}

.assumptions {
  margin-top: 12px;
  font-size: 0.9rem;
  color: var(--muted);
}

.clarification {
  border: 1px dashed var(--border);
  border-radius: 16px;
  padding: 14px;
  margin-bottom: 12px;
  background: #fffdf9;
}

.clarification h3 {
  margin: 0 0 6px;
  font-size: 1rem;
}

.clarification p {
  margin: 0 0 10px;
  color: var(--muted);
  font-size: 0.9rem;
}

.report-grid {
  display: grid;
  gap: 12px;
}

.report-pill {
  padding: 10px 12px;
  border-radius: 12px;
  background: #fff;
  border: 1px solid var(--border);
}

.footnote {
  text-align: center;
  color: var(--muted);
  padding: 24px;
  font-size: 0.85rem;
}

@keyframes reveal {
  from {
    opacity: 0;
    transform: translateY(14px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (min-width: 900px) {
  .app {
    grid-template-columns: 1.05fr 0.95fr;
    align-items: start;
  }

  .hero {
    grid-column: 1 / -1;
  }

  .results {
    position: sticky;
    top: 24px;
  }
}

@media (max-width: 680px) {
  .panel {
    padding: 22px;
  }

  .bg-shape {
    inset: 4% 4% auto auto;
    width: 180px;
    height: 180px;
  }
}
